{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "airbnb", 
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins":  ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
               {
                 "singleQuote": true,
                 "trailingComma": "none",
                 "arrowParens": "avoid",
                 "semi": false
              }
            ],
            "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
      }
}
